@model IceCream.ViewModel.AdminLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-12"></div>
            <div class="col-sm-12 col-lg-4">
                <div class="limiter mt-lg-5 pt-3">
                    <div class="wrap-login100">
                        <div class="title"><h2>Đăng nhập</h2></div>
                        @using (Html.BeginForm())
                        {
            @Html.ValidationSummary(true)
                            <div class="input-group">
                                <span class="mt-3 user-name">Tài khoản</span>
                                @Html.TextBoxFor(modelItem => modelItem.Username, new { @placeholder = "*Nhập tài khoản" })<br />
                                @Html.ValidationMessageFor(modelItem => modelItem.Username)
                            </div>
                                            <div class="input-group">
                                                <span class="mt-3 user-name">Mật khẩu</span>
                                                @Html.PasswordFor(modelItem => modelItem.Password, new { @placeholder = "*Nhập mật khẩu" })<br />
                                                @Html.ValidationMessageFor(modelItem => modelItem.Password)
                                            </div>
                                                            <button type="submit" class="login100-form-btn">
                                                                Đăng nhập
                                                            </button>}
                        <hr />
                        <div class="text-center contact-us mb-lg-5 mb-3">Liên hệ ngay với chúng tôi !!</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-12"></div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
</body>
</html>